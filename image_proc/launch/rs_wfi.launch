        <remap from="camera_out/image_raw" to="depth/image_rect_raw_h1"/>
        <remap from="camera_out/camera_info" to="depth/camera_info_h1"/>
      </node>

      <node pkg="nodelet" type="nodelet"
        args="load image_proc/crop_decimate $(arg manager) $(arg bond)" respawn="$(arg respawn)"
