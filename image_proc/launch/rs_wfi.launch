        <param name="width" type="int" value="3" />
        <param name="height" type="int" value="480" />

        <remap from="camera/image_raw" to="depth/image_rect_raw"/>
        <remap from="camera/camera_info" to="depth/camera_info"/>
  
        <remap from="camera_out/image_raw" to="depth/image_rect_raw_v3"/>
        <remap from="camera_out/camera_info" to="depth/camera_info_v3"/>
      </node>

      <node pkg="nodelet" type="nodelet"
        args="load image_proc/crop_decimate $(arg manager) $(arg bond)" respawn="$(arg respawn)"
