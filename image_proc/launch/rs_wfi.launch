        <remap from="camera/image_raw" to="depth/image_rect_raw_v3"/>
        <remap from="camera/camera_info" to="depth/camera_info_v3"/>
  
        <remap from="camera_out/image_raw" to="depth/image_rect_raw_v1"/>
        <remap from="camera_out/camera_info" to="depth/camera_info_v1"/>
      </node>

-->

      <!-- <node pkg="nodelet" type="nodelet" output="screen"
        args="load pointcloud_to_laserscan/pointcloud_to_laserscan_nodelet $(arg manager) $(arg bond)" respawn="$(arg respawn)"
        name="pcl2laser">

        <param name="target_frame" type="str" value="camera_link" />
        <param name="min_height" type="double" value="0.4" />
        <param name="max_height" type="double" value="0.6" />
        <param name="min_range" type="double" value="0" />
        <param name="max_range" type="double" value="0" />
        <param name="angle_min" type="double" value="-0.78539816339" />
        <param name="angle_max" type="double" value="0.78539816339" />
        <param name="angle_increment" type="double" value="0.01745329251" />
        <param name="use_inf" type="boolean" value="true" />

        <remap from="cloud_in" to="depth_registered/points"/>

        <remap from="scan" to="pcl2laser/laserscan"/>
      </node> -->

      <node pkg="nodelet" type="nodelet" output="screen"
        args="load image_proc/scan $(arg manager) $(arg bond)" respawn="$(arg respawn)"
        name="image_proc_scan">
        <param name="h_x_offset" type="int" value="30" />
        <param name="h_y_offset" type="int" value="289" />
        <param name="h_width" type="int" value="580" />
        <param name="h_height" type="int" value="3" />

        <param name="v_x_offset" type="int" value="209" />
        <param name="v_y_offset" type="int" value="30" />
        <param name="v_width" type="int" value="3" />
        <param name="v_height" type="int" value="420" />

        <remap from="camera/image_raw" to="depth/image_rect_raw"/>
        <remap from="camera/image_info" to="depth/camera_info"/>
  
        <remap from="camera_out/h_scans" to="depth/h_scans"/>
        <remap from="camera_out/v_scans" to="depth/v_scans"/>
        <remap from="camera_out/h_scan" to="depth/h_scan"/>
      </node>

  
      <node pkg="nodelet" type="nodelet" output="screen"
        args="load depthimage_to_laserscan/DepthImageToLaserScanNodelet $(arg manager) $(arg bond)" respawn="$(arg respawn)"
        name="depth2laser">
          <param name="scan_height" type="int" value="240"/>
          <param name="range_max" type="double" value="100.0"/>
          <param name="range_min" type="double" value="-100.0"/>
          <param name="output_frame_id" type="str" value="base_link"/>
          <remap from="image" to="depth/image_rect_raw" />
          <remap from="scan" to="depth/laserscan" />
      </node>

  </group>
</launch>
